---
import { SITE_TITLE, SITE_DESCRIPTION, SUBDIR_ADAPTIVE_URL } from '../../consts';
import BackToTop from './BackToTop.astro';
---

<div id="awards" class="cv_item">
    <h4 class="title_decoration">受賞歴</h4>
    <div id="award_history_table">
        <ul class="award_history">
            <!-- 上から新しい順 -->
            <li class="award_item">
                <span class="award_year">2024-03</span>
                <span class="award_title">2023年度 人工知能学会 研究会優秀賞</span>
            </li>
            <li class="award_item">
                <span class="award_year">2020-12</span>
                <span class="award_title">大阪府立大学 学長顕彰</span>
            </li>
            <li class="award_item">
                <span class="award_year">2019-07</span>
                <span class="award_title">2019年度 人工知能学会 先進的学習科学と工学（ALST）研究会 若手奨励賞</span>
            </li>
            <li class="award_item">
                <span class="award_year">2018-11</span>
                <span class="award_title">教育・学習支援システム若手の会 学生功労賞</span>
            </li>
        </ul>
    </div>

    <BackToTop />
</div>

<style>
 .award_history {
     position: relative;
     left: -1em;
 }
 .award_history > li {
     list-style-type: none; /*点を非表示*/
     position: relative; /*基準位置*/
     padding-left: 1em;
 }
 .award_history > li:before {
     border-radius: 50%; /*丸くする*/
     width: 5px; /*点の幅*/
     height: 5px; /*点の高さ*/
     display: block;
     position: absolute; /*絶対配置*/
     left: 0; /*点の位置*/
     top: 0.6em; /*点の位置*/
     content: "";
     background: #1ec4e6; /*点の色*/
 }

 .award_item {
     line-height: 1.5em;
     display: flex;
 }
 .award_item > .award_year {
     flex: 0 0 5em;
 }

 .award_item > .award_title {
     flex: 1 1 auto;
 }
 
 
</style>
