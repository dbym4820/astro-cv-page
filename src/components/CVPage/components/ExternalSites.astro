---
import { SITE_TITLE, SITE_DESCRIPTION, SUBDIR_ADAPTIVE_URL } from '../../consts';
import BackToTop from './BackToTop.astro';
---

<div id="external_sites" class="cv_item">
    <h4 class="title_decoration cv_title">外部サイト</h4>
    <ul class="site_items">
        <li class="site_item_line">
            <span class="line_before">Github：</span><a href="https://github.com/dbym4820">https://github.com/dbym4820</a>
        </li>
        <li class="site_item_line">
            <span class="line_before">researchmap：</span><a href="https://researchmap.jp/tomoki-aburatani">https://researchmap.jp/tomoki-aburatani</a>
        </li>
    </ul>

    <BackToTop />
</div>

<style>
 #external_sitess {

 }

 .cv_title {

 }

 .site_items {
     position: relative;
     left: -1em;
     margin-bottom: -0.3em;
 }
 .site_items > li {
     list-style-type: none; /*点を非表示*/
     position: relative; /*基準位置*/
     padding-left: 1em;
 }
 .site_items > li:before {
     border-radius: 50%; /*丸くする*/
     width: 5px; /*点の幅*/
     height: 5px; /*点の高さ*/
     display: block;
     position: absolute; /*絶対配置*/
     left: 0; /*点の位置*/
     top: 0.6em; /*点の位置*/
     content: "";
     background: #1ec4e6; /*点の色*/
 }

 .site_item_line {
     display: flex;
 }
 .site_item_line > .line_before {
     flex: 0 0 7em;
 }

</style>
