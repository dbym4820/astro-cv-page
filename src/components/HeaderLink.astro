---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
import { SITE_TITLE, SITE_DESCRIPTION, SUBDIR_ADAPTIVE_URL } from '../consts';

const { pathname } = Astro.url;
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === SUBDIR_ADAPTIVE_URL(pathname) || href === SUBDIR_ADAPTIVE_URL(subpath?.[0]);
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
    <p>tag-href : {href}</p>
    <p>tag-pathname : {pathname}</p>
    <p>tag-subpath : {subpath}</p>
    <p>tag-active : {isActive}</p>
        
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
